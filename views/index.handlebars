<div class="container">
	<div class="jumbotron">
		<h1>Technology News</h1>
	</div>
</div>

<ul>
	{{#each plans}}
		<li>
			<p>
				{{this.id}}: {{this.plan}}
				<form method="DELETE">
					<input type="hidden" name="id" value="{{this.id}}">
					<button type="submit">Delete Articles</button>
				</form>
			</p>
		</li>
	{{/each}}
</ul>

<h2>Create Articles</h2>
<form method="POST" class="button-size">
	<textarea type="text" name="plan"></textarea>
	<button type="submit">Save Articles!</button>
</form>

<h2>Update Articles</h2>
<form method="POST" class="button-size">
  <input type="text" name="id" placeholder="id">
	<textarea type="text" name="plan" placeholder="updated article content"></textarea>
	<button type="submit">Update Articles!</button>
</form>